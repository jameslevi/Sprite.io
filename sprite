#!/usr/bin/env php
<?php declare(strict_types=1);

/**
 * SPRITE
 * ---------------------------------------
 * Is an image compiler written in PHP 
 * created for web developers.
 * 
 * @author  James Levi Crisostomo
 * @version v1.0.8
 */

// Include the composer autoloader. 
if(file_exists(__DIR__ . '/vendor/autoload.php'))
{
    require __DIR__ . '/vendor/autoload.php';
}

// Create new sprite object each time a command
// is executed from the CLI.
$sprite = \Sprite\Sprite::init($argv, __DIR__);

// Execute sprite program.
$sprite->exec();

// Terminate sprite program.
$sprite->terminate();